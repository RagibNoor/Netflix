@model Netflix.Models.Movie
@{
    ViewBag.Title = "Save";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Save</h2>

@using (Html.BeginForm("Save", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(a => a.Name)
        @Html.TextBoxFor(a => a.Name, new {@class = "form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(a => a.ReleaseDate)
        @Html.TextBoxFor(a => a.ReleaseDate,"{0:MMM dd yyyy}", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(a => a.DateAdded)
        @Html.TextBoxFor(a => a.DateAdded, "{0:MMM dd yyyy}", new {@class = "form-control"})
    </div>
    
     <div class="form-group">
        @Html.LabelFor(a => a.GenreId)
         @Html.DropDownListFor(c => c.GenreId, new SelectList(ViewBag.Genre, "Id", "Name"), "--Select--", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(a => a.NumberInStock)
        @Html.TextBoxFor(a => a.NumberInStock, new {@class = "form-control"})
    </div>
    
    @Html.HiddenFor(a=>a.Id)
    
    <button type="submit" class="btn btn-primary">Save</button>
}


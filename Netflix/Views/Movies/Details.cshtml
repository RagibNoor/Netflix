@model Netflix.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Realesed Date: @Model.ReleaseDate.ToLongTimeString()</li>
    <li>Added Date: @Model.DateAdded.ToLongTimeString()</li>
    <li>Number In Stock: @Model.NumberInStock</li>
   
</ul>


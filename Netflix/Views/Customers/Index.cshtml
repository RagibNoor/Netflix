}

<h2>Customers</h2>
@if (Model.Count == 0)
{
    <p> We dont have any customer yet</p>
}
else
{
<table id="customers" class="table table-bordered table-hover">
    <thead>
    <tr>
        <td>Customers</td>
        <td> Membership Type</td>
        <td> Delete</td>
        
    </tr>

        
    </thead>

    <tbody>

        @*@foreach (var customer in Model)
        {

@using Microsoft.Ajax.Utilities
@model Netflix.Models.Customer
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h2>Create New Customer</h2>



@using (Html.BeginForm("Save","Customers" ))
{
    @Html.HiddenFor(a=>a.Id)
    <div class="form-group">
        @Html.LabelFor(a => a.Name)
        @Html.TextBoxFor(a => a.Name, new {@class = "form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(a => a.Birthdate)
        @Html.TextBoxFor(a => a.Birthdate,"{0:MMM dd yyyy}", new {@class = "form-control"})
    </div>
    
     <div class="form-group">
        @Html.LabelFor(a => a.MembershipTypeId)
         @Html.DropDownListFor(c => c.MembershipTypeId, new SelectList(ViewBag.MemberShipType, "Id", "Name"), "--Select--", new { @class = "form-control" })
    </div>
    
     <div class="checkbox">
         <label>
             @Html.CheckBoxFor(m=>m.IsSubscribed) Subscribed to newsletters?
         </label>
    </div>
    
    <button type="submit" class="btn btn-primary">Save</button>
}

